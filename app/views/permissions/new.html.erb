<%= render 'shared/header'%>
<%= render 'shared/second-header'%>

<body>
  <div class="user-show-container">
    <div class="user-profile">
      <div class="user-show-icon">
        <%= image_tag "human.jpg" %>
      </div>
      <div class="user-name">
        <h1><%= @notification.visitor_id.nickname %></h1>
      </div>
    </div>
    <div class="user-introduction">
      <%= @notification.visitor.introduction %>
    </div>
    <div class="room-permission-btns">
      <%= link_to '追加する', notification_permissions_path(@notification.id), class: 'room-permission-btn' %> 
      <%# <%= link_to '拒否する', "#", class: 'room-destroy-btn', method: :delete %> 
    </div>
    <hr>
    <div class="room-list-container">
      <% if @notification.visitor.rooms.present?%>
        <% @notification.visitor.rooms.each do |room|%>
          <ul class="room-list">
            <li class="room-item">
              <div class="room-info">
                <h3 class="room-name"><%=room.name%></h3>
                <div class="room-meta">
                  <span class="room-created"><%=l room.created_at%></span>
                  <span class="room-level">Level <%=room.level.name%></span>
                </div>
                <div class="room-habit">
                  <span>達成したい習慣: <%=room.habit%></span>
                </div>
                <div class="room-user">
                  <span>作成者: <%= room.creator.nickname %></span>
                </div>
              </div>
				      <div class="room-buttons">
                <%=link_to "詳細", room_path(room.id), class: "room-show-link" %>
              </div>
            </li>
          </ul>
        <% end %>
      <% else %>
        <span>まだルームはありません</span>
      <% end %>
    </div>
  </div>
</body>